---
import {
  ArrowRight,
  BookOpen,
  FileCheck2,
  Map as MapIcon,
  PieChart,
} from 'lucide-react';
import PageWrapper from '@/components/PageWrapper';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { isAuthenticated } from '@/lib/auth-helpers';

const isAuth = isAuthenticated(Astro.locals);
---

<BaseLayout title="Office - nexs">
  <PageWrapper
    activeTab="office"
    headerTitle="事務局"
    headerSubtitle="組織運営と情報公開の窓口"
    headerIconType="office"
    isAuthenticated={isAuth}
    client:load
  >
    <div class="px-5 lg:px-8 max-w-md lg:max-w-[940px] mx-auto w-full animate-fade-in-up">
      <!-- Active Module Section -->
      <section class="mb-12">
        <div class="flex items-center gap-2 mb-4 border-l-2 border-gray-900 pl-2">
          <h2 class="text-xs font-bold text-gray-900 uppercase tracking-widest">Active Module</h2>
        </div>

        <div class="space-y-3">
        <!-- Journal -->
        <a href="/office/journal" class="block group relative">
          <!-- Status Indicator -->
          <div class="absolute -right-1 -top-1 w-3 h-3 bg-gray-900 rounded-full border-2 border-white z-10 shadow-sm"></div>

          <div class="bg-white rounded-xl shadow-md border-2 border-gray-900 p-5 hover:shadow-xl transition-all transform hover:-translate-y-0.5">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-12 h-12 rounded-lg bg-gray-900 flex items-center justify-center text-white flex-shrink-0">
                <BookOpen className="w-6 h-6" />
              </div>
              <div>
                <h3 class="text-base font-bold text-gray-900 leading-tight">Journal</h3>
                <p class="text-[10px] text-gray-500 font-mono mt-0.5">Status: <span class="text-gray-900 font-bold">Online</span></p>
              </div>
            </div>

            <div class="border-t border-gray-100 pt-3">
              <p class="text-xs text-gray-600 leading-relaxed mb-3">
                理事長の活動日誌。<br />
                日々の気づき、取り組み、思考の記録。
              </p>
              <div class="flex items-center gap-2 text-[10px] font-bold text-gray-900 group-hover:underline">
                <span>日誌を読む</span>
                <ArrowRight className="w-3 h-3" />
              </div>
            </div>
          </div>
        </a>

        <!-- Resolutions -->
        <a href="/governance/resolutions" class="block group relative">
          <!-- Status Indicator -->
          <div class="absolute -right-1 -top-1 w-3 h-3 bg-gray-900 rounded-full border-2 border-white z-10 shadow-sm"></div>

          <div class="bg-white rounded-xl shadow-md border-2 border-gray-900 p-5 hover:shadow-xl transition-all transform hover:-translate-y-0.5">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-12 h-12 rounded-lg bg-gray-900 flex items-center justify-center text-white flex-shrink-0">
                <FileCheck2 className="w-6 h-6" />
              </div>
              <div>
                <h3 class="text-base font-bold text-gray-900 leading-tight">Resolutions</h3>
                <p class="text-[10px] text-gray-500 font-mono mt-0.5">Status: <span class="text-gray-900 font-bold">Online</span></p>
              </div>
            </div>

            <div class="border-t border-gray-100 pt-3">
              <p class="text-xs text-gray-600 leading-relaxed mb-3">
                非同期・分散型の意思決定プロトコル。<br />
                議案の閲覧、議論ログの確認、電子署名はこちらから。
              </p>
              <div class="flex items-center gap-2 text-[10px] font-bold text-gray-900 group-hover:underline">
                <span>システムを利用する</span>
                <ArrowRight className="w-3 h-3" />
              </div>
            </div>
          </div>
        </a>
        </div>
      </section>

      <!-- Coming Soon Section -->
      <section class="mb-12">
        <div class="flex items-center gap-2 mb-6 border-l-2 border-gray-200 pl-2">
          <h2 class="text-xs font-bold text-gray-400 uppercase tracking-widest">Coming Soon</h2>
        </div>

        <div class="space-y-3">
          <!-- Open Finance -->
          <div class="flex items-center gap-4 p-4 rounded-xl border border-gray-100 bg-gray-50 opacity-60 grayscale cursor-not-allowed relative overflow-hidden">
            <div class="absolute inset-0 bg-white/50 z-10"></div>
            <div class="w-10 h-10 rounded-lg bg-gray-200 flex items-center justify-center text-gray-400 flex-shrink-0">
              <PieChart className="w-5 h-5" />
            </div>
            <div class="flex-1">
              <div class="flex justify-between items-center mb-1">
                <h3 class="text-sm font-bold text-gray-500">Open Finance</h3>
                <span class="text-[9px] font-bold bg-gray-200 text-gray-500 px-1.5 py-0.5 rounded">PHASE 2</span>
              </div>
              <p class="text-[10px] text-gray-400 leading-tight">
                リアルタイム予算管理・透明化システム
              </p>
            </div>
          </div>

          <!-- Living Handbook -->
          <div class="flex items-center gap-4 p-4 rounded-xl border border-gray-100 bg-gray-50 opacity-60 grayscale cursor-not-allowed relative overflow-hidden">
            <div class="absolute inset-0 bg-white/50 z-10"></div>
            <div class="w-10 h-10 rounded-lg bg-gray-200 flex items-center justify-center text-gray-400 flex-shrink-0">
              <BookOpen className="w-5 h-5" />
            </div>
            <div class="flex-1">
              <div class="flex justify-between items-center mb-1">
                <h3 class="text-sm font-bold text-gray-500">Living Handbook</h3>
                <span class="text-[9px] font-bold bg-gray-200 text-gray-500 px-1.5 py-0.5 rounded">PHASE 3</span>
              </div>
              <p class="text-[10px] text-gray-400 leading-tight">
                Git管理された定款・規定集
              </p>
            </div>
          </div>

          <!-- Async Roadmap -->
          <div class="flex items-center gap-4 p-4 rounded-xl border border-gray-100 bg-gray-50 opacity-60 grayscale cursor-not-allowed relative overflow-hidden">
            <div class="absolute inset-0 bg-white/50 z-10"></div>
            <div class="w-10 h-10 rounded-lg bg-gray-200 flex items-center justify-center text-gray-400 flex-shrink-0">
              <MapIcon className="w-5 h-5" />
            </div>
            <div class="flex-1">
              <div class="flex justify-between items-center mb-1">
                <h3 class="text-sm font-bold text-gray-500">Async Roadmap</h3>
                <span class="text-[9px] font-bold bg-gray-200 text-gray-500 px-1.5 py-0.5 rounded">PHASE 3</span>
              </div>
              <p class="text-[10px] text-gray-400 leading-tight">
                非同期チームのためのコンパス
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Footer Info -->
      <section class="border-t border-gray-100 pt-8 text-center">
        <p class="text-[10px] text-gray-400 font-mono mb-2">
          nexs Open Governance Protocol
        </p>
        <p class="text-[10px] text-gray-400">
          System Status: <span class="text-gray-900 font-bold">Phase 1 Operational</span>
        </p>
      </section>
    </div>
  </PageWrapper>
</BaseLayout>

<style>
  :global(body) {
    @apply bg-white;
  }
</style>
