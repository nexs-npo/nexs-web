---
import BottomNav from '@/components/BottomNav';
import Header from '@/components/Header';
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Signals - nexs">
  <div class="min-h-screen bg-white flex flex-col">
    <Header
      title="Signals"
      subtitle="AIが収集した業界動向と、研究員による実験ログ"
      showSearch={false}
      client:load
    />

    <main class="flex-1 pt-24 pb-32 animate-fade-in-up">
      <div class="flex flex-col items-center justify-center px-5 max-w-md mx-auto pt-16 text-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-gray-300 mb-6">
          <polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon>
        </svg>
        <h2 class="text-lg font-bold text-gray-900 mb-2">Coming Soon</h2>
        <p class="text-sm text-gray-500 leading-relaxed mb-8">
          このSignalは現在準備中です。
        </p>
        <a
          href="/signals/"
          class="inline-flex items-center justify-center gap-2 rounded-xl border border-gray-200 bg-white px-6 py-3 text-xs font-bold text-gray-800 hover:bg-gray-50 transition-colors"
        >
          ← Signals に戻る
        </a>
      </div>
    </main>

    <BottomNav activeTab="signals" client:load />
  </div>
</BaseLayout>
