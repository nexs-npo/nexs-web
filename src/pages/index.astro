---
import PageWrapper from '@/components/PageWrapper';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { isAuthenticated } from '@/lib/auth-helpers';
import { Icons } from '@/components/Icons';

const isAuth = isAuthenticated(Astro.locals);

const spaces = [
  {
    id: 'lab',
    name: '研究室',
    nameEn: 'Lab',
    description: '進行中の研究プロジェクト',
    href: '/lab/',
    icon: 'BookSearch'
  },
  {
    id: 'library',
    name: '書庫',
    nameEn: 'Library',
    description: '研究記事とナレッジベース',
    href: '/library/',
    icon: 'Library'
  },
  {
    id: 'office',
    name: '事務局',
    nameEn: 'Office',
    description: '組織情報と公開文書',
    href: '/office/',
    icon: 'DoorClosed'
  },
  {
    id: 'mydesk',
    name: 'マイデスク',
    nameEn: 'MyDesk',
    description: '会員専用ワークスペース',
    href: '/mydesk/',
    icon: 'LampDesk',
    requiresAuth: true
  }
];
---

<BaseLayout title="nexs - Digital Twin">
  <PageWrapper
    activeTab="nexs"
    headerTitle="nexs"
    headerSubtitle="Digital Twin"
    headerIconType="nexs"
    isAuthenticated={isAuth}
    client:load
  >
    <div class="px-5 lg:px-8 max-w-md lg:max-w-[940px] mx-auto w-full animate-fade-in-up">
      <!-- Hero Section -->
      <section class="mb-12 text-center">
        <div class="inline-flex items-center gap-2 px-3 py-1 bg-gray-100 text-gray-600 border border-gray-200 rounded-full text-[10px] font-mono font-bold mb-8">
          <span class="w-1.5 h-1.5 rounded-full bg-gray-900 animate-pulse"></span>
          SYSTEM ONLINE
        </div>
        <h1 class="text-2xl font-black text-gray-900 my-12 tracking-tight leading-tight">
          nexs
        </h1>
        <p class="text-sm text-gray-600 leading-loose mb-8">
          ここは次世代社会デザイン研究機構のデジタルツインです。<br />
          研究室を歩き回るように自由に探索してみてください。
        </p>
        <a href="/about" class="inline-flex items-center gap-2 px-4 py-2 bg-gray-900 text-white rounded-lg text-xs font-bold hover:bg-gray-800 transition-colors">
          <span>次世代社会デザイン研究機構とは</span>
          <span>→</span>
        </a>
      </section>

      <!-- Spaces Grid -->
      <section class="mb-12">
        <div class="flex items-center gap-2 mb-6 border-l-2 border-gray-900 pl-2">
          <h2 class="text-sm font-bold text-gray-900">どこに行きますか？</h2>
        </div>

        <div class="grid grid-cols-1 gap-4">
          {spaces.map((space) => {
            const Icon = Icons[space.icon as keyof typeof Icons];
            return (
              <a
                href={space.href}
                class="block group relative"
              >
                <div class="bg-white rounded-xl shadow-md border-2 border-gray-200 p-5 hover:shadow-xl hover:border-gray-900 transition-all transform hover:-translate-y-0.5">
                  <div class="flex items-center gap-4">
                    <div class="w-12 h-12 rounded-lg bg-gray-100 flex items-center justify-center text-gray-900 flex-shrink-0 group-hover:bg-gray-900 group-hover:text-white transition-colors">
                      <Icon class="w-6 h-6" />
                    </div>
                    <div class="flex-1">
                      <div class="flex items-baseline gap-2 mb-1">
                        <h3 class="text-base font-bold text-gray-900">{space.name}</h3>
                        <span class="text-[10px] text-gray-400 font-mono">{space.nameEn}</span>
                      </div>
                      <p class="text-xs text-gray-600">{space.description}</p>
                    </div>
                    <div class="text-gray-300 group-hover:text-gray-900 transition-colors">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </div>
                  </div>
                </div>
              </a>
            );
          })}
        </div>
      </section>

      <!-- System Info -->
      <section class="border-t border-gray-100 pt-8 pb-4 text-center">
        <p class="text-[10px] text-gray-400 font-mono mb-2">
          nexs Digital Twin Environment v1.0
        </p>
        <p class="text-[10px] text-gray-400">
          次世代社会デザイン研究機構 / Next Generation Social Design Institute
        </p>
      </section>
    </div>
  </PageWrapper>
</BaseLayout>

<style>
  :global(body) {
    @apply bg-gray-50;
  }
</style>
